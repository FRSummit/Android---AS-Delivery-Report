<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/main_logo_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:background="@drawable/bottom_border">

        <TextView
            android:id="@+id/main_logo_icon_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textColor="@color/shasroy_color"
            android:textSize="30dp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:gravity="center"/>

        <TextView
            android:id="@+id/main_logo_icon_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amar Shasroy"
            android:fontFamily="@font/league_spartan_regular"
            android:textColor="@color/shasroy_color"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_below="@+id/main_logo_icon_text_1"/>

    </LinearLayout>
</FrameLayout>