<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryHistory"
    android:background="@drawable/report_input_background">

    <include
        android:id="@+id/common_logo_section"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        layout="@layout/common_logo"/>

        <LinearLayout
            android:id="@+id/user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:background="@drawable/et_custom"
            android:layout_below="@+id/common_logo_section">

            <LinearLayout
                android:id="@+id/id_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:textSize="18dp"
                    android:textColor="@color/input_text_color"/>

                <TextView
                    android:id="@+id/delivery_man_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="18dp"
                    android:textColor="@color/input_text_color"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/name_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="18dp"
                    android:textColor="@color/input_text_color"/>

                <TextView
                    android:id="@+id/delivery_man_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summit"
                    android:textSize="18dp"
                    android:textColor="@color/input_text_color"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="18dp"
                    android:textColor="@color/input_text_color"/>

                <TextView
                    android:id="@+id/delivery_man_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="frsummit@simplexhub.com"
                    android:textSize="18dp"
                    android:textColor="@color/input_text_color"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="18dp"
                    android:textColor="@color/input_text_color"/>

                <TextView
                    android:id="@+id/delivery_man_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0168XXXXXXX"
                    android:textSize="18dp"
                    android:textColor="@color/input_text_color"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/address_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="18dp"
                    android:textColor="@color/input_text_color"/>

                <TextView
                    android:id="@+id/delivery_man_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mymensingh, Dhaka, BD"
                    android:textSize="18dp"
                    android:textColor="@color/input_text_color"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/username_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="18dp"
                    android:textColor="@color/input_text_color"/>

                <TextView
                    android:id="@+id/delivery_man_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="frsummit"
                    android:textSize="18dp"
                    android:textColor="@color/input_text_color"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/password_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="18dp"
                    android:textColor="@color/input_text_color"/>

                <TextView
                    android:id="@+id/delivery_man_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123456"
                    android:textSize="18dp"
                    android:textColor="@color/input_text_color"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password_section"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Report List by order number"
                    android:textSize="20dp"
                    android:textColor="@color/input_text_color"/>

                <ListView
                    android:id="@+id/report_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dividerHeight="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/et_custom"
                    android:layout_below="@+id/user_info"/>
            </LinearLayout>

        </LinearLayout>

</RelativeLayout>