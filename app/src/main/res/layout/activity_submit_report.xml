<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitReport">

    <include
        android:id="@+id/common_logo_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/common_logo"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/common_logo_section">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <!--Report Header-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Report Details"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/BLACK"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:background="@drawable/bottom_border"/>
            </LinearLayout>

            <!--Report Details-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <!--Report Id-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Report Id"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1001"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Delivery Partner Id-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Delivery Partner Id"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2014200000071"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Customer Name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Customer Name"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shahed Khan"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Customer Name Override-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Customer Name Override"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shahed Khan K"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Order Number-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Order Number"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="O-202"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Order Number Override-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Order Number Override"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="O-2020"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Order By-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Order By"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Summit"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Order By Override-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Order By Override"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="F R Summit"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Order Date-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Order Date"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20-10-2020"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Order Date Override-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Order Date Override"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20-10-2020"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Delivery Date-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Delivery Date"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="26-10-2020"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Delivery Date Override-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Delivery Date Override"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="25-10-2020"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Delivery To Name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Delivery To Name"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Babu"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Delivery To Name Override-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Delivery To Name Override"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Babu Khan"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Status-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delivered"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Comment-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Comment"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No comment"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Image URL-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Image URL"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="www.amarshasroy.com"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

                <!--Report Signature URL-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Signature URL"
                        android:textSize="18dp"
                        android:textColor="@color/shasroy_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="www.amarshasroy.com"
                        android:textSize="18dp"
                        android:textColor="@color/BLACK"/>
                </LinearLayout>

            </LinearLayout>

            <!--Report Submission-->
            <LinearLayout
                android:id="@+id/report_submit_sec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <Button
                    android:id="@+id/report_submit"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:onClick="submitReportHandler"
                    android:text="Submit Report"
                    android:textStyle="bold"
                    android:textColor="@color/WHITE"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textAllCaps="false"
                    android:background="@drawable/ripple_transparent_background"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>